# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/streaming_platform"
REDIS_URL="redis://localhost:6379"
ELASTICSEARCH_URL="http://localhost:9200"

# JWT Secret (Generate a secure random string)
JWT_SECRET="your-super-secret-jwt-key-change-in-production-min-32-chars"
JWT_EXPIRES_IN="7d"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_GRAPHQL_URL="http://localhost:3001/graphql"

# Payment Gateways
# SSLCommerz (Bangladesh) - Get from https://developer.sslcommerz.com/
SSLCOMMERZ_STORE_ID="your-sslcommerz-store-id"
SSLCOMMERZ_STORE_PASSWORD="your-sslcommerz-password"
SSLCOMMERZ_IS_LIVE=false

# Stripe - Get from https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# PayPal - Get from https://developer.paypal.com/
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox"

# CDN & Storage
# AWS S3 - Get from AWS Console
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="streaming-platform-videos"

# Cloudflare R2 - Get from Cloudflare Dashboard
CLOUDFLARE_ACCOUNT_ID="your-cloudflare-account-id"
CLOUDFLARE_API_TOKEN="your-cloudflare-api-token"
CLOUDFLARE_R2_BUCKET="streaming-videos"

# Video Processing
FFMPEG_PATH="/usr/bin/ffmpeg"
VIDEO_UPLOAD_PATH="./uploads/videos"
VIDEO_OUTPUT_PATH="./public/videos"

# External APIs
# TMDB API for movie metadata - Get from https://www.themoviedb.org/settings/api
TMDB_API_KEY="your-tmdb-api-key-for-metadata"
# OMDB API for additional metadata - Get from http://www.omdbapi.com/apikey.aspx
OMDB_API_KEY="your-omdb-api-key"

# Security
ENCRYPTION_KEY="your-32-character-encryption-key-here"
DRM_LICENSE_SERVER="https://your-drm-server.com"

# Analytics
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
# Sentry for error tracking - Get from https://sentry.io/
SENTRY_DSN="https://your-sentry-dsn"

# Email Service (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Development
NODE_ENV="development"
PORT=3000
BACKEND_PORT=3001

# MinIO (Local S3-compatible storage)
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin123"
MINIO_BUCKET="streaming-videos"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET="your-session-secret-key"
SESSION_MAX_AGE=86400000

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://yourdomain.com"
